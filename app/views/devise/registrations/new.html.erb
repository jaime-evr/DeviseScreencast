<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'pure-form pure-form-stacked' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, placeholder: 'Email' %>
  <%= f.password_field :password, placeholder: 'password' %>
  <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>

  <%= f.button "Sign up", class: 'pure-button pure-button-primary' %>
  <%= link_to "Go back", root_path, class: 'pure-button pure-button-secondary' %>
<% end %>
