<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form pure-form-stacked' }) do |f| %>
  
  <div><%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

  <div><%= f.password_field :password, placeholder: "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me, class: 'pure-checkbox' do %>
      <%= f.check_box :remember_me %> Remember me!
    <% end -%>
  <% end -%>

  <div><%= f.button "Sign in", class: 'pure-button pure-button-primary' %></div><br>
<% end %>

<%= render "devise/shared/links" %>
