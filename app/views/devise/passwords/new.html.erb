<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'pure-form pure-form-stacked' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, placeholder: 'Email' %>
  <%= f.submit "Send me reset password instructions", class: 'pure-button pure-button-primary' %>
  <%= link_to "Go Back", root_path, class: 'pure-button pure-button-secondary' %>
<% end %>


